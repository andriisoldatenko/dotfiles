[user]
	name = Andrii Soldatenko
[net]
	git-fetch-with-cli = true
[commit]
	gpgsign = true
[color]
  ui = true
  branch = auto
  diff = auto
  interactive = auto
  status = auto
[alias]
	co = checkout
	cl = clone
	cp = cherry-pick
	m = merge
	r = reset
	p = !git push origin $(git rev-parse --abbrev-ref HEAD)
	pl = !git pull origin $(git rev-parse --abbrev-ref HEAD)
	c = "!git add -A && git commit -m "
	a = add
        push = push
        c = commit
        s = status
        b = branch
	d = diff
	lsch = "!f() { git diff --name-status -r "HEAD~$1"; }; f"
	pom = pull origin master
        undo = reset --hard HEAD
        hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
        type = cat-file -t
	dump = cat-file -p
	last = rev-parse --short HEAD
        lt = log --all --graph --decorate --oneline --abbrev-commit
        ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
        ld = log --pretty=format:"%C(yellow)%h\\ %C(green)%ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short --graph
        ls = log --pretty=format:"%C(green)%h\\ %C(yellow)[%ad]%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=relative
        pr = !sh -c \"git fetch upstream pull/${1}/head:pr/${1} && git checkout pr/${1}\" 
        change = codereview change
        gofmt = codereview gofmt
        mail = codereview mail
        pending = codereview pending
        submit = codereview submit
        sync = codereview sync
        recent = for-each-ref --sort=-committerdate --count=10 --format='%(refname:short)' refs/heads/
  dunk = !git diff | dunk
  br = "!bp() { git branch andrii/$1;git checkout andrii/$1;}; bp"
[core]
	excludesfile = ~/.gitignore_global
  editor = nvim
  pager = diff-so-fancy | less --tabs=4 -RFX
[http]
	cookiefile = /Users/andrii/.gitcookies
[tag]
	sort = -version:refname
[diff]
	noprefix = true
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false
[pull]
	ff = only
; [url "ssh://git@github.com/"]
; 	insteadOf = https://github.com/
[gpg]
  program = /opt/homebrew/bin/gpg
  ; program = /usr/local/MacGPG2/bin/gpg
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[init]
	defaultBranch = main
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 11
	frag = magenta bold
	func = 146 bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
